#!/bin/bash
##====================================================
## Little helper script to start a docker jupyter
## instance listening on a free port.
##====================================================
default_port=8888

. nextfreeport
target_port=$(nextfreeport $default_port)

docker run -e GRANT_SUDO=yes --user root -d -p $target_port:$default_port \
  -v "$(pwd)":/home/jovyan/work jupyter/datascience-notebook && \
  echo "docker jupyter running on http://localhost:$target_port/"
