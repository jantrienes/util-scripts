#!/bin/bash
##====================================================
## Little helper script to start a docker shiny
## instance listening on a free port.
##====================================================
default_port=3838

. nextfreeport
nextfreeport $default_port

docker run -d -p $NEXT_FREE_PORT:$default_port  -v "$(pwd)":/srv/shiny-server/  rocker/shiny
echo "docker shiny running on http://localhost:$NEXT_FREE_PORT/"
